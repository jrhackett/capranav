import java.util.Comparator;
import java.util.PriorityQueue;

/*
 * An implementation for a Node describing a location to be used in Graph
 */
public class Node 
{
	/*
	 * name is the name of the location
	 * index is an arbitrary number to identify Node in graph
	 * x is the x coordinate on the map
	 * y is the y coordinate on the map
	 */
	private String name;
	private int index;
	private double x;
	private double y;
	Comparator<Edge> comparator = new EdgeComparator(); 
	PriorityQueue<Edge> edges = new PriorityQueue<Edge>();
	
	/*
	 * Constructor initializes the Node
	 */
	public Node(String name, int index, double x, double y)
	{
		/*
		 * Might want to do bounds checking on these in the future
		 */
		this.name = name;
		this.index = index;
		this.x = x;
		this.y = y;
	}
	
	/*
	 * Returns name of the node
	 */
	public String getName()
	{
		return this.name;
	}
	
	/*
	 * Returns the node's index
	 */
	public int getIndex()
	{
		return this.index;
	}
	
	/*
	 * Returns the x coordinate of the node
	 */
	public double getX()
	{
		return this.x;
	}
	
	/*
	 * Return the y coordinate of the node
	 */
	public double getY()
	{
		return this.y;
	}
	
	/*
	 * Returns a String describing this Node
	 */
	public String toString()
	{
		return String.format("%s(%d): %.5f, .5f", this.name, this.index, this.x, this.y);
	}
}
